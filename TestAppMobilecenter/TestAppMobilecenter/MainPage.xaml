<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TestAppMobilecenter"
             x:Class="TestAppMobilecenter.MainPage">

    <StackLayout>
        <Label Text="{Binding Counter}" 
           VerticalOptions="Center" 
           HorizontalOptions="CenterAndExpand" />

        <Button Text="Increase Counter" Command="{Binding IncreaseCountCommand}" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>
        <Button Text="Crash the App" Command="{Binding CrashAppCommand}"  HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>

    </StackLayout>
</ContentPage>